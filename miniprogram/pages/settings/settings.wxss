.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #F5F5F5;
  padding: 40rpx;
  box-sizing: border-box;
}

.title {
  font-size: 48rpx;
  color: #333333;
  margin-bottom: 60rpx;
  font-weight: bold;
}

.settings-section {
  width: 90%;
  background-color: #FFFFFF;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.section-title {
  font-size: 36rpx;
  color: #333333;
  margin-bottom: 30rpx;
  font-weight: 500;
}

.difficulty-container {
  display: flex;
  justify-content: space-between;
  width: 100%;
}

.difficulty-option {
  width: 30%;
  background-color: #F0F0F0;
  border-radius: 12rpx;
  padding: 20rpx;
  text-align: center;
  transition: all 0.3s;
}

.difficulty-option.selected {
  background-color: #4A90E2;
  color: #FFFFFF;
  box-shadow: 0 4rpx 8rpx rgba(74, 144, 226, 0.3);
  transform: translateY(-4rpx);
}

.option-title {
  font-size: 32rpx;
  font-weight: 500;
  margin-bottom: 10rpx;
}

.option-description {
  font-size: 24rpx;
  opacity: 0.8;
}

.color-preview {
  width: 90%;
  background-color: #FFFFFF;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.preview-title {
  font-size: 32rpx;
  color: #333333;
  margin-bottom: 20rpx;
  display: block;
}

.balls-preview {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 20rpx;
}

.preview-ball {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin: 0 15rpx;
  box-shadow: inset -2rpx -2rpx 4rpx rgba(0, 0, 0, 0.4), 
              inset 2rpx 2rpx 6rpx rgba(255, 255, 255, 0.5), 
              1rpx 2rpx 5rpx rgba(0, 0, 0, 0.3);
  background-image: linear-gradient(135deg, rgba(255, 255, 255, 0.6) 0%, 
                                  rgba(255, 255, 255, 0.2) 30%, 
                                  rgba(0, 0, 0, 0.1) 100%);
}

.btn-container {
  display: flex;
  justify-content: space-around;
  width: 90%;
  margin-top: 20rpx;
}

.btn {
  width: 280rpx;
  height: 90rpx;
  line-height: 90rpx;
  border-radius: 10rpx;
  font-size: 32rpx;
  color: #fff;
  background-color: #4A90E2;
  transition: background-color 0.3s;
  display: flex;
  align-items: center;
  justify-content: center;
}

.save-btn {
  background-color: #4CAF50;
}

.cancel-btn {
  background-color: #9E9E9E;
} 