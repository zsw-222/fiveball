<!--index.wxml-->
<scroll-view class="scrollarea" scroll-y type="list">
  <view class="container">
    <view class="title">五球连珠</view>
    
    <view class="btn-container">
      <button class="btn start-btn" bindtap="startGame">开始游戏</button>
      <button class="btn settings-btn" bindtap="openSettings">游戏设置</button>
      <button class="btn rank-btn" bindtap="openRank">排行榜</button>
      <button class="btn help-btn" bindtap="openHelp">帮助</button>
    </view>
  </view>
</scroll-view>
