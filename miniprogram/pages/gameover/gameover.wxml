<view class="container">
  <view class="gameover-title">游戏结束</view>
  
  <view class="score-container">
    <text class="score-label">最终得分</text>
    <text class="final-score">{{score}}</text>
  </view>
  
  <view class="btn-container">
    <button class="btn restart-btn" bindtap="restartGame">重新开始</button>
    <button class="btn home-btn" bindtap="backToHome">返回主菜单</button>
    <button class="btn share-btn" bindtap="shareScore" open-type="share">分享成绩</button>
  </view>
</view> 