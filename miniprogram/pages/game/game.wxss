.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  padding-top: 0rpx;
  padding-bottom: 20rpx;
  padding-left: 20rpx;
  padding-right: 20rpx;
  box-sizing: border-box;
  height: 100vh;
  background-color: #F5F5F5;
  position: relative;
}

.game-header {
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0rpx 20rpx 10rpx;
  margin-bottom: 10rpx;
  margin-top: 30rpx;
}

.score-container {
  display: flex;
  align-items: center;
}

.score-label {
  font-size: 36rpx;
  color: #333333;
  margin-right: 10rpx;
}

.score {
  font-size: 48rpx;
  color: #333333;
  font-weight: bold;
}

.next-balls {
  display: flex;
  align-items: center;
}

.next-label {
  font-size: 28rpx;
  color: #333333;
  margin-right: 10rpx;
}

.next-balls-container {
  display: flex;
  align-items: center;
}

.preview-ball {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  margin: 0 10rpx;
}

.game-grid {
  width: 640rpx;
  height: 640rpx;
  background-color: #FFFFFF;
  border: 2rpx solid #DDDDDD;
  display: flex;
  flex-direction: column;
}

.grid-row {
  display: flex;
  flex: 1;
}

.grid-cell {
  flex: 1;
  border: 1rpx solid #DDDDDD;
  display: flex;
  align-items: center;
  justify-content: center;
}

.grid-cell.selected {
  background-color: rgba(255, 235, 59, 0.3);
}

.grid-cell.blocked {
  background-color: rgba(255, 0, 0, 0.1);
}

.ball {
  width: 80%;
  height: 80%;
  border-radius: 50%;
  transition: transform 0.3s;
}

.ball.bouncing {
  animation: bounce 0.8s infinite alternate;
}

@keyframes bounce {
  0% {
    transform: translateY(0);
  }
  100% {
    transform: translateY(-10rpx);
  }
}

.selected .ball {
  box-shadow: 0 0 8rpx 4rpx #FFEB3B;
}

.moving-ball-container {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  pointer-events: none;
}

.moving-ball {
  position: absolute;
  width: 51rpx;
  height: 51rpx;
  border-radius: 50%;
  transition: all 0.3s ease;
  z-index: 100;
  transform: translate(-50%, -50%);
}

.path-blocked-msg {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  background-color: rgba(0, 0, 0, 0.7);
  color: white;
  padding: 20rpx 30rpx;
  border-radius: 10rpx;
  font-size: 32rpx;
  animation: fadeIn 0.3s ease;
}

@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

.game-controls {
  display: flex;
  justify-content: space-around;
  align-items: center;
  width: 100%;
  margin-top: 20rpx;
  padding: 10rpx 0;
}

.control-btn {
  width: 200rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: 32rpx;
  color: #FFFFFF;
  background-color: #4A90E2;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.path-indicator-container {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  pointer-events: none;
  z-index: 50;
}

.path-indicator {
  position: absolute;
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  background-color: rgba(74, 144, 226, 0.7);
  transform: translate(-50%, -50%);
  box-shadow: 0 0 5rpx rgba(0,0,0,0.2);
  animation: pulse 1.5s infinite;
}

@keyframes pulse {
  0% {
    transform: translate(-50%, -50%) scale(0.8);
    opacity: 0.7;
  }
  50% {
    transform: translate(-50%, -50%) scale(1.2);
    opacity: 1;
  }
  100% {
    transform: translate(-50%, -50%) scale(0.8);
    opacity: 0.7;
  }
} 